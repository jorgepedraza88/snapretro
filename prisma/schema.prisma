generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Retrospective {
  id          String    @id @default(uuid())
  admin_id    String
  avatar_url  String?
  created_at  DateTime  @default(now())
  end_date    DateTime?
  settings    Json      @default("{}")
  secret_word String?
  status      String
  sections RetrospectiveSection[]

  @@index([admin_id])
  @@map("retrospectives")
}

model RetrospectiveSection {
  id               String @id @default(uuid())
  sort_order       Int
  retrospective_id String
  title            String
  retrospective Retrospective       @relation(fields: [retrospective_id], references: [id], onDelete: Cascade)
  posts         RetrospectivePost[]

  @@index([retrospective_id])
  @@map("retrospective_sections")
}

model RetrospectivePost {
  id         String   @id @default(uuid())
  section_id String
  user_id    String
  content    String
  votes      String[]
  section RetrospectiveSection @relation(fields: [section_id], references: [id], onDelete: Cascade)

  @@index([section_id])
  @@index([user_id])
  @@map("retrospective_posts")
}
